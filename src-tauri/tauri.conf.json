{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Git Commander"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**/*"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": true,
        "scope": [
          {
            "name": "go to folder",
            "cmd": "cd",
            "args": [
              {
                "validator": "[\\s\\S]+"
              }
            ]
          },
          {
            "name": "git ssl",
            "cmd": "git",
            "args": ["config --global http.sslVerify false"]
          },
          {
            "name": "git username",
            "cmd": "git",
            "args": [
              "config --global user.name",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "git 1 args",
            "cmd": "git",
            "args": [
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "git 2 args",
            "cmd": "git",
            "args": [
              {
                "validator": "\\S+"
              },
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "git 3 args",
            "cmd": "git",
            "args": [
              {
                "validator": "\\S+"
              },
              {
                "validator": "\\S+"
              },
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      }
    },
    "windows": [
      {
        "title": "Git Commander",
        "width": 1280,
        "height": 720,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.git-commander.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
